<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Gráfico circular (tipo queso/pastel) -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartMacros"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:ignore="MissingClass"
            android:layout_marginBottom="24dp" />

        <!-- PROTEÍNAS -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proteínas"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/barChartProtein"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textProtein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <!-- CARBOHIDRATOS -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carbohidratos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/barChartCarbs"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textCarbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <!-- GRASAS -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grasas"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/barChartFats"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textFats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <!-- CALORÍAS -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calorías"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/barChartCalories"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textCalories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp"
            android:paddingTop="4dp" />

    </LinearLayout>
</ScrollView>
